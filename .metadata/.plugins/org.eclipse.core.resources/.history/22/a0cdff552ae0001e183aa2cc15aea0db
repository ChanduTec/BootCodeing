package com.example.demo.entity;

import org.springframework.data.annotation.Id;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Entity;
import jakarta.persistence.OneToOne;
import jakarta.persistence.Table;

@Entity
@Table
public class Person {

	@Id
	private Integer personId;
	private String personeName;
	private String gender;
	@OneToOne(mappedBy = "person", cascade = CascadeType.ALL)
	private Passport passport;
	
	public Person(Integer personId, String personeName, String gender, Passport passport) {
		super();
		this.personId = personId;
		this.personeName = personeName;
		this.gender = gender;
		this.passport = passport;
	}
	public Person() {
		super();
		// TODO Auto-generated constructor stub
	}
	
	public Integer getPersonId() {
		return personId;
	}
	public void setPersonId(Integer personId) {
		this.personId = personId;
	}
	public String getPersoneName() {
		return personeName;
	}
	public void setPersoneName(String personeName) {
		this.personeName = personeName;
	}
	public String getGender() {
		return gender;
	}
	public void setGender(String gender) {
		this.gender = gender;
	}
	public Passport getPassport() {
		return passport;
	}
	public void setPassport(Passport passport) {
		this.passport = passport;
	}
	@Override
	public String toString() {
		return "Person [personId=" + personId + ", personeName=" + personeName + ", gender=" + gender + ", passport="
				+ passport + "]";
	}

	
	
}